# Yugram Application Environment Configuration

# Database Configuration
YUGRAM_DB_PASSWORD=secret
YUGRAM_DB_PORT=5432

# Application Configuration
YUGRAM_APP_PORT=8080

# Telegram Configuration (REQUIRED)
# Get these values from https://my.telegram.org/apps
TG_API_ID=your_telegram_api_id
TG_API_HASH=your_telegram_api_hash
TG_PHONE_NUMBER=your_phone_number_with_country_code
TG_PASSWORD=your_telegram_password_if_two_factor_enabled

# JVM Configuration (Optional)
JAVA_OPTS=-Xmx512m -Xms256m

# Spring Profile (Optional)
SPRING_PROFILES_ACTIVE=default

# Adminer Port (Optional - only used when tools profile is enabled)
ADMINER_PORT=8090